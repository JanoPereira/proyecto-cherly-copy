<div class="login-register-container">
    <div class="login-top">
        <p class="login-top-label">IDENTIFICATE</p>
        <div class="login-exit-btn-container">
            <i class="fa-solid fa-x login-exit-btn"></i>
        </div>
    </div>
    <div class="login-container">
        <p class="login-label">YA ESTOY REGISTRADO</p>
        <form action="" method="POST" class="login-form">
            <div class="input-field">
                <label for="username" class="input-label">Usuario</label>
                <input type="text" class="input" name="userName" id="userName">
            </div>
            <div class="input-field">
                <label for="password" class="input-label">Contraseña</label>
                <div class="input-container relative-input">
                    <input type="password" class="input" name="password" id="password">
                    <i class="fa-solid fa-eye show-password-btn password-btn-toggler"></i>
                    <i class="fa-solid fa-eye-slash hide-password-btn password-btn-toggler hidden"></i>
                </div>
                <a href="#" class="forgot-password-link">¿Olvidaste tu contraseña?</a>
            </div>
            <button class="btn">Entrar</button>
        </form>
    </div>
    <div class="register-container">
        <p class="login-label">NO ESTOY REGISTRADO</p>
        <p class="registration-text">Enjoy added benefits and richer experience by creating a personal account.</p>
        <button class="btn">Crear Cuenta</button>
    </div>
</div>